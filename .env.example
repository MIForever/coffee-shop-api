# Application
SECRET_KEY=your_very_secure_secret_key_here
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=json
API_PREFIX=/api/v1
DEBUG=true

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=coffee_shop
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/coffee_shop

# Redis
REDIS_PASSWORD=redispass
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://:redispass@redis:6379/0
CELERY_BACKEND_URL=redis://:redispass@redis:6379/0

# JWT
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_REFRESH_SECRET_KEY=your_jwt_refresh_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_TLS=true
SMTP_FROM_EMAIL=noreply@example.com
EMAIL_VERIFICATION_ENABLED=true

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100